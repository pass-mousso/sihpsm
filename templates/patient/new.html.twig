{% extends "#{theme.getParameter('KT_THEME_LAYOUT_DIR')}/_default.html.twig" %}

{% block css %}
    <style>
        .barre-right {
            border-right: 3px solid #2f18ef;
            border-right-style: dashed;
        }

        .patient-collapse {
            background: #1d741fad !important;
            color: #fff;
        }

        .patient-collapse h4 {
            color: #fff;
        }
    </style>
{% endblock %}

{% block page_title %}New Patient{% endblock %}

