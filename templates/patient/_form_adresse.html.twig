    <!--begin::Wrapper-->
    <div class="d-flex flex-stack flex-grow-1 flex-wrap flex-md-nowrap">
        <!--begin::Content-->
        <div class="mb-3 mb-md-0 fw-bold">
            <h4 class="text-gray-900 fw-bolder">Information Adresse</h4>
        </div>
    </div>
    <!--end::Wrapper-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">
        <span class="required">Contact</span>
        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="Vous devrez valider votre contact après soumission"></i>
    </label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{form_widget(form.contact, { attr: {class:'form-control form-control-lg form-control-solid mb-3 mb-lg-0', placeholder:" "}}) }}
    </div>
    <!--end::Col-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">
        <span class="">Adresse</span>
    </label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{form_widget(form.address, { attr: {class:'form-control form-control-lg form-control-solid mb-3 mb-lg-0', placeholder:" "}}) }}
    </div>
    <!--end::Col-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">
        <span class="required">Pays</span>
        <i class="fas fa-exclamation-circle ms-1 fs-7">
        </i>
    </label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{ form_widget(form.country, {
            attr: {
                'id': 'country-select',
                'aria-label': "Select a Country",
                'data-control': "select2",
                class: 'form-select form-select-solid form-select-lg fw-bold mb-3',
                'data-placeholder': "Sélectionnez un pays..."
            }
        }) }}
    </div>
    <!--end::Col-->
</div>

<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">
        <span class="required">Région d'origine</span>
        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="Sélectionnez d'abord un pays">
        </i>
    </label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{ form_widget(form.region, {
            attr: {
                'id': 'region-select',
                'data-aria-selected': "true",
                'aria-label': "Select a Region",
                'data-control': "select2",
                class: 'form-select form-select-solid form-select-lg fw-bold mb-3',
                'data-placeholder': "Sélectionnez une région..."
            }
        }) }}
    </div>
    <!--end::Col-->
</div>

<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">
        <span class="required">Ville</span>
    </label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{ form_widget(form.city, {
            attr: {
                'id': 'city-select',
                'aria-label': "Sélectionnez une ville",
                'data-control': "select2",
                class: 'form-select form-select-solid form-select-lg fw-bold mb-3',
                'data-placeholder': "Sélectionnez une ville..."
            }
        }) }}
    </div>
    <!--end::Col-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">
        <span class="required">Nationalité</span>
        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="Nationnalité d'origine">
        </i>
    </label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{form_widget(form.nationality, { attr: {'aria-label':"Select a Country" , 'data-control':"select2", class:'form-select form-select-solid form-select-lg fw-bold mb-3','data-placeholder':"Selectionnez une nationnalité..." }}) }}
    </div>
    <!--end::Col-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6 required">Lieu d'habitation</label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{form_widget(form.placeResidence, { attr: {class:'form-control form-control-lg form-control-solid mb-3 mb-lg-0', placeholder:" "}}) }}
    </div>
    <!--end::Col-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">Profession</label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{form_widget(form.occupation, { attr: {class:'form-control form-control-lg form-control-solid mb-3 mb-lg-0', placeholder:" "}}) }}
    </div>
    <!--end::Col-->
</div>
<div class="row mb-6">
    <!--begin::Label-->
    <label class="col-lg-4 col-form-label fw-bold fs-6">Entreprise/École</label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8 fv-row">
        {{form_widget(form.company, { attr: {class:'form-control form-control-lg form-control-solid mb-3 mb-lg-0 fw-bold', placeholder:" "}}) }}
    </div>
    <!--end::Col-->
</div>

