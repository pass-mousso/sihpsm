{% extends "#{theme.getParameter('KT_THEME_LAYOUT_DIR')}/_default.html.twig" %}

{% block page_title %}Dashboard{% endblock %}

{% block content %}
    <div class="row g-5 g-xl-10 mb-5 mb-xl-10">
        <div class="col-xxl-12">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Indicative</th>
                    <th>Code</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for country in countries %}
                    <tr>
                        <td>{{ country.id }}</td>
                        <td>{{ country.name }}</td>
                        <td>{{ country.indicative }}</td>
                        <td>{{ country.code }}</td>
                        <td>
                            <a href="{{ path('app_country_show', {'id': country.id}) }}">show</a>
                            <a href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_country_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
