{{ form_start(form, { attr:{id:"kt_account_profile_details_form", class:"form"}}) }}
    <!--begin::Card body-->
    <div class="card-body border-top p-9">
        <!--begin::Input group-->
        <div class="row mb-6">
            <!--begin::Label-->
            <div class="col-lg-4 fv-row">
                <label class="col-form-label required fw-semibold fs-6">Nom</label>
                <input type="text" name="{{ field_name(form.name) }}" class="form-control form-control-lg form-control-solid" placeholder="Nom" value="{{ field_value(form.name) }}" />
{#                {{ form_widget(form.name, { attr:{name:"name", class:"form-control form-control-lg form-control-solid mb-3 mb-lg-0", placeholder:"Nom"}}) }}#}
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-lg-4 fv-row">
                <!--begin::Label-->
                <label class="col-form-label fw-semibold fs-6">Currency</label>
                <!--end::Label-->
                <!--begin::Col-->
                <div class="fv-row">
                    <select name="{{ field_name(form.currency) }}" aria-label="Type de forfait" data-control="select2" data-placeholder="Type de forfait.." class="form-select form-select-solid form-select-lg">
                        <option value="">Select a currency..</option>
                        {% for label, value in field_choices(form.currency) %}
                            <option data-kt-flag="flags/united-states.svg" value="{{ value }}">{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <!--end::Col-->
            </div>
            <div class="col-lg-4 fv-row">
                <label class="col-form-label required fw-semibold fs-6">Prix</label>
                {{ form_widget(form.price, { attr:{ name:"price", class:"form-control form-control-lg form-control-solid", placeholder:"Entrez le prix" }})}}
            </div>
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="row mb-6">
            <div class="col-lg-5 fv-row">
                <!--begin::Label-->
                <label class="col-form-label fw-semibold fs-6">Type de forfait</label>
                <!--end::Label-->
                <!--begin::Col-->
                <div class="fv-row">
                    <select name="{{ field_name(form.frequency) }}" aria-label="Type de forfait" data-control="select2" data-placeholder="Type de forfait.." class="form-select form-select-solid form-select-lg">
                        <option value="">Select a currency..</option>
                        {% for label, value in field_choices(form.frequency) %}
                        <option data-kt-flag="flags/united-states.svg" value="{{ value }}">{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <!--end::Col-->
            </div>
            <div class="col-lg-5 fv-row">
                <label class="col-form-label required fw-semibold fs-6">Plan de randonn√©e</label>
                {{ form_widget(form.trial_days, { attr: {name:"company", class:"form-control form-control-lg form-control-solid", placeholder:"Entrez les jours d'essai"}}) }}
            </div>
            <div class="col-lg-2 fv-row">
                <label class="col-form-label required fw-semibold fs-6">SMS Limit</label>
                {{ form_widget(form.sms_limit, { attr: {name:"smslimit", class:"form-control form-control-lg form-control-solid", placeholder:"SMS Limit"}}) }}
            </div>
        </div>
    </div>
    <!--end::Card body-->
    <!--begin::Actions-->
    <div class="card-footer d-flex justify-content-end py-6 px-9">
        <button type="reset" class="btn btn-light btn-active-light-primary me-2">Annuler</button>
        <button type="submit" class="btn btn-primary" id="kt_account_profile_details_submit">Sauvegarder</button>
    </div>
    <!--end::Actions-->
{{ form_end(form) }}
